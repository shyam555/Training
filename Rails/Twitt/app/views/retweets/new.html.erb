<div class="panel panel-info">
  <div class="panel-heading">
    <h4 class="name">Retweet</h4>
    <div style="float:right; font-size: 80%; position: relative; top:-10px"></div>
  </div>
  <div class="panel-body">
    <div class= "well">
      <%= @post.content%>
      <p><%= image_tag @post.picture, style: "width:100px;height:100px" if @post.picture? %></p>
      <%= form_for @retweet, url: retweets_path(id: @post.id) do |f| %>
        <p>
          <%= f.label :Retweet %><br>
          <%= f.text_area :content, size: "30x3" %>
        </p>
          <%= f.submit "Retweet", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>