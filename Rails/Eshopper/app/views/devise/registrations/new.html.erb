<section id="form"><!--form-->
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-2">
        <div class="login-form"><!--signup form-->
          <h2>New User Signup!</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <%= f.text_field :firstname, autofocus: true, placeholder: "First Name" %>
            <%= f.text_field :lastname, autofocus: true, placeholder: "Last Name" %>
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
           
            <%= f.password_field :password, autocomplete: "off",placeholder:"Password" %>
            <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"Confirm-Password" %>
            <span>
              <%= f.check_box :remember_me,class:"checkbox" %>
              Keep me signed in
            </span><%= f.submit "Sign Up",class:"btn btn-primary" %>
          <% end %>
            
        </div><!--/signup form-->
      </div>
      
     <div class="col-sm-4">
      <div class="signup">
        <span class="or signup-seperator">OR</span>
        <div class="col-sm-12 signin-other">
          <div class='signup-g'>
            <%= link_to user_google_oauth2_omniauth_authorize_path do %>
              <span class="link_text_color">Sign in with google</span>
            <% end %>
          </div>
          <div class='signin-f'>
            <%= link_to user_facebook_omniauth_authorize_path do %>
              <span class="link_text_color">Sign in with facebook</span>
            <% end %>
          </div>
          <div class='signin-t'>
            <%#= link_to user_twitter_omniauth_authorize_path do %>
              <span class="link_text_color">Sign in with twitter</span>
            <%# end %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</section><!--/form-->