
<h1> Student Demo</h1>
<%= link_to 'Add student', new_student_path %>
<h2>All Students</h2>
<table>
<tr>
  <th>Profile_Picture</th>
  <th>First_name</th>
  <th>Last_name</th>
  <th colspan="2">Email_id</th>

</tr>
  
<% @students.each do |student| %>
<tr>
  <td><%= image_tag student.picture, style: "width:100px;height:100px"%></td>
  <td><%= student.first_name %></td>
  <td><%= student.last_name %></td>
  <td><%= student.email_id %></td>
  <td><%= link_to 'Show', student_path(student) %></td>
  <td><%= link_to 'Edit', edit_student_path(student) %></td>
  <td><%= link_to 'Delete', student_path(student),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
  <td><%= link_to 'Download PDF', student_students_download_pdf_path(student, format: 'pdf') %></td>

</tr>
<% end %>
<td><%= link_to 'SEND MAIL', users_url(users_url) %></td>
</table>

